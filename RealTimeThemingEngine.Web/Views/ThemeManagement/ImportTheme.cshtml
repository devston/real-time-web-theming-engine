@model RealTimeThemingEngine.Web.Models.Theming.ImportThemeViewModel

@{
    ViewBag.Title = "Theme Management";
}

<header class="form-header" site-require="theme-management" site-module-name="ThemeManagement" site-module-variable="import">
    <div class="container">
        <h1 class="form-title">Import a theme</h1>
    </div>
</header>
<div class="container">
    <form class="card" id="theme-form">
        <div class="card-body">
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Upload a theme</label>
                <div class="custom-file">
                    @Html.TextBoxFor(x => x.FileToUse, htmlAttributes: new { accept = ".json", @class = "custom-file-input", type = "file" })
                    @Html.LabelFor(x => x.FileToUse, htmlAttributes: new { @class = "custom-file-label" })
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-secondary" id="save-theme-btn" title="Import the theme" type="submit">
                <i aria-hidden="true" class="fas fa-upload"></i>Import
            </button>
            <button class="btn btn-secondary" id="back-to-theme-list-btn" title="Go back to the theme list" type="button">
                <i aria-hidden="true" class="fas fa-list-ul"></i>Back
            </button>
        </div>
    </form>
</div>