<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Theming demo</title>
    <link href="~/dist/site.bundle.min.css" rel="stylesheet" />
    <link href="~/Content/Theming/theme.less" rel="stylesheet" />
    <script src="~/dist/main.bundle.js" async defer></script>
</head>
<body>
    <a class="skip-container sr-only sr-only-focusable" href="#pjax-container">
        <div class="container">
            <span class="skiplink-text">Skip to main content</span>
        </div>
    </a>
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })">
                Theming demo
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-nav" aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="main-nav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Theme management", "Index", "ThemeManagement", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div aria-hidden="true" class="alert-container" id="alert-container"></div>
    <div class="loader-backdrop js-loader-wrapper hidden" id="loader-wrapper">
        <div class="loader-container">
            <div class="loader"></div>
        </div>
    </div>
    <main id="pjax-container">
        @RenderBody()
    </main>
</body>
</html>